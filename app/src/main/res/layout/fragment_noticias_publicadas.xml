<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ui.ModuloOrganizacion.Publicaciones.NoticiasPublicadasFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idLayoutFondo"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#2196F3"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnIcoAtras"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="#03A9F4"
            android:contentDescription="@string/boton_regresar"
            android:src="?attr/actionModeCloseDrawable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#FFFFFF"/>

        <TextView
            android:id="@+id/tituloNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_publicar_noticias"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnAyuda"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:background="#03A9F4"
            android:visibility="invisible"
            android:contentDescription="@string/boton_ayuda"
            android:src="@android:drawable/ic_menu_help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/noticias2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLayoutFondo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <TextView
            android:id="@+id/titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_titulo_de_noticia"
            android:textColor="#2196F3"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/et_titulo_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/placeholder_titulo_de_noticia"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#B3ABAB"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/label_fecha_noticia"
            android:textColor="#2196F3"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/et_fecha_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/placeholder_fecha_noticia"
            android:inputType="date"
            android:minHeight="48dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/titulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/label_descripcion_noticia"
            android:textColor="#2196F3"
            android:textSize="17sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/et_descripcion_noticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/placeholder_descripcion_noticia"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#B3ABAB"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_publicar_noticia"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#2196F3"
            android:text="@string/boton_guardar_noticia" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>